    function loadItems() {
        $.ajax({
            url: '/Configuration/GetInventoryItems',
            type: 'GET',
            success: function (data) {
                let dropdown = $('#itemId');
                dropdown.empty().append('<option value="">Select Item</option>');
                data.forEach(item => {
