    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
            font-family: "Poppins", sans-serif;
        }

        html, body {
            overflow-x: hidden;
            width: 100%;
            height: 100%;
        }

        /* Header styling */
        header {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 26px;
            background: var(--bg-secondary);
            display: flex;
            align-items: center;
            padding: 0 20px;
            justify-content: space-between;
            z-index: 1000;
            box-shadow: 0 2px 5px rgba(0,0,0,0.1);
        }

        .header-end {
            margin-left: auto;
        }

        /* Sidebar styling */
        nav.sidebar {
            position: fixed;
            top: 0;
            left: 0;
            width: 60px;
            height: 100vh;
            background: var(--bg-secondary);
            transition: all 0.3s ease;
            overflow: hidden;
            z-index: 1100;
            box-shadow: 2px 0 5px rgba(0,0,0,0.1);
        }

            nav.sidebar.active {
                width: 230px;
            }

            nav.sidebar ul {
                position: relative;
                top: 0;
                left: 0;
                width: 100%;
                padding: 0;
            }

                nav.sidebar ul li {
                    list-style: none;
                    width: 100%;
                    position: relative;
                }

                    nav.sidebar ul li a {
                        position: relative;
                        display: flex;
                        align-items: center;
                        text-decoration: none;
                        color: var(--cl-text);
                        transition: 0.2s;
                        width: 100%;
                        padding: 10px 0;
                    }

                        nav.sidebar ul li a .icon {
                            min-width: 60px;
                            height: 40px;
                            line-height: 40px;
                            text-align: center;
                        }

                        nav.sidebar ul li a .title {
                            font-size: 0.85em;
                            white-space: nowrap;
                        }

                        nav.sidebar ul li a .icon * {
                            font-size: 1.1em;
                        }

                        nav.sidebar ul li a:hover {
                            color: var(--bg-primary);
                            background-color: rgba(253, 219, 58, 0.1);
                        }

                    nav.sidebar ul li:hover a::before {
                        background-color: var(--bg-active);
                        width: 100%;
                    }

        /* Toggle button */
        .toggle {
            cursor: pointer;
            padding: 10px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .mainContainer {
            margin-left: 60px;
            transition: margin-left 0.3s ease;
            padding-top: 20px;
        }

            .mainContainer.active {
                margin-left: 230px;
            }

        /* Colors */
        :root {
            --bg-primary: #41444b;
            --bg-secondary: #ffe0cc; /* Removed transparency (70) */
            --bg-active: #fddb3a;
            --cl-text: black;
        }

        #sidebarToggleIcon {
            display: block;
        }

        #headerMenuToggle {
            display: none;
        }

        /* Responsive adjustments */
        @@media (max-width: 768px) {
            header

        {
            display: flex !important;
            height: 60px;
        }

        #sidebarToggleIcon {
            display: none;
        }

        #headerMenuToggle {
            display: block;
        }

        /* For mobile, sidebar starts hidden */
        nav.sidebar {
            left: -250px;
            width: 250px;
            top: 60px;
            height: calc(100vh - 60px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }

            nav.sidebar.active {
                left: 0;
                width: 250px;
            }

        .mainContainer, .mainContainer.active {
            margin-left: 0 !important;
            padding-top: 70px; /* Account for fixed header */
        }

        /* Overlay when sidebar is open */
        .sidebar-overlay {
            display: none;
            position: fixed;
            top: 60px;
            left: 0;
            right: 0;
            bottom: 0;
            background-color: rgba(0,0,0,0.5);
            z-index: 1050;
        }

            .sidebar-overlay.active {
                display: block;
            }

        }

        .stylish-text {
            font-family: 'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif, cursive;
            font-size: 20px;
            font-weight: bold;
            color: black;
            text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.2);
        }

        .breadcrumb {
            display: flex;
            align-items: center;
            list-style: none;
            font-size: 14px;
            margin: 0;
            padding: 0;
        }

        .breadcrumb-item a {
            text-decoration: none;
            color: #007bff;
        }

        .breadcrumb-item.active {
            color: #555;
            font-weight: bold;
        }
    </style>
</head>
<body style="background-color:white">

    <header id="mainHeader">
       
        <div class="header-end">
            <div class="toggle" id="headerMenuToggle">
                <i class="fas fa-bars"></i>
            </div>
        </div>
    </header>

    <!-- Overlay for mobile when sidebar is open -->
    <div class="sidebar-overlay" id="sidebarOverlay"></div>

    <nav class="sidebar">
        <ul>
            <li id="sidebarToggleIcon">
                <a class="toggle">
                    <span class="icon"><i class="fas fa-bars"></i></span>
                    <span class="title">Menu</span>
                </a>
            </li>

            <li>
                <a asp-area="" asp-controller="EventBooking" asp-action="EventBooking">
                    <span class="icon"><i class="fas fa-calendar-check"></i></span>
                    <span class="title">BookEvent</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="DashBoard" asp-action="DashBoard">
                    <span class="icon"><i class="fas fa-home"></i></span>
                    <span class="title">DashBoard</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="User" asp-action="User">
                    <span class="icon"><i class="fas fa-user-plus"></i></span>
                    <span class="title">AddUser</span>
                </a>
            </li>
            <li>
                <a asp-area="" hidden asp-controller="EventCrud" asp-action="EventCrud">
                    <span class="icon"><i class="fas fa-calendar-plus"></i></span>
                    <span class="title">AddEvent</span>
                </a>
            </li>

           
            <li>
                <a asp-area="" asp-controller="EventBooking" asp-action="TableView">
                    <span class="icon"><i class="fas fa-file-alt"></i></span>
                    <span class="title">Report</span>
                </a>
            </li>
            <li>
                <a asp-area="" asp-controller="Home" asp-action="Login">
                    <span class="icon"><i class="fas fa-sign-out-alt"></i></span>
                    <span class="title">Sign Out</span>
                </a>
            </li>
        </ul>
    </nav>

    <div class="mainContainer" id="mainContent">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    @await RenderSectionAsync("Scripts", required: false)

    <script>
        // DOM elements
        const sidebar = document.querySelector('.sidebar');
        const toggleButtons = document.querySelectorAll('.toggle');
        const mainContainers = document.querySelectorAll('.mainContainer');
        const overlay = document.getElementById('sidebarOverlay');

        // Function to check if the screen is small (mobile)
        function isMobile() {
            return window.innerWidth <= 768;
        }

        // Toggle sidebar function
        function toggleSidebar() {
            sidebar.classList.toggle('active');

            // Only toggle main container margin on desktop
            if (!isMobile()) {
                mainContainers.forEach(container => {
                    container.classList.toggle('active');
                });
            }

            // Toggle overlay on mobile
            if (isMobile()) {
                overlay.classList.toggle('active');
            }
        }

        // Add click event to toggle buttons
        toggleButtons.forEach(button => {
            button.addEventListener('click', toggleSidebar);
        });

        // Close sidebar when clicking overlay
        overlay.addEventListener('click', () => {
            sidebar.classList.remove('active');
            overlay.classList.remove('active');
        });

        // Handle window resize
        window.addEventListener('resize', () => {
            // If resizing from mobile to desktop
            if (!isMobile() && sidebar.classList.contains('active')) {
                mainContainers.forEach(container => {
                    container.classList.add('active');
                });
                overlay.classList.remove('active');
            }

            // If resizing from desktop to mobile
            if (isMobile() && sidebar.classList.contains('active')) {
                mainContainers.forEach(container => {
                    container.classList.remove('active');
                });
                overlay.classList.add('active');
            }
        });

        // Initialize visibility based on screen size
        document.addEventListener('DOMContentLoaded', () => {
            const header = document.getElementById('mainHeader');
            header.removeAttribute('hidden');

            if (isMobile()) {
                sidebar.classList.remove('active');
                mainContainers.forEach(container => {
                    container.classList.remove('active');
                });
            }
        });
    </script>
</body>
